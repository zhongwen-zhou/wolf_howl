<h1>修改我的资料</h1>

        <ul id="user_profile_tab" class="nav nav-tabs">
          <li class="active"><a href="#profile" data-toggle="tab">基本信息</a></li>
          <li><a href="#change_password" data-toggle="tab">修改密码</a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="profile">
            	<%= form_for(@user) do |f| %>
				  <% if @user.errors.any? %>
				    <div id="error_explanation">
				      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

				      <ul>
				      <% @user.errors.full_messages.each do |msg| %>
				        <li><%= msg %></li>
				      <% end %>
				      </ul>
				    </div>
				  <% end %>

				  <div class="field">
				    <%= f.label :email, "电子邮箱" %><br />
				    <%= f.text_field :email, :disabled => :disabled %>
				  </div>
				  <div class="field">
				    <%= f.label :nick_name, "昵称" %><br />
				    <%= f.text_field :nick_name %>
				  </div>
				  <div class="field">
				    <%= f.label :brief_introduction, "自我介绍" %><br />
				    <%= f.text_area :brief_introduction, :rows => 3 %>
				  </div>
				  <div class="actions">
				    <%= f.submit "保存" %>
				  </div>
				<% end %>
          </div>
          <div class="tab-pane" id="change_password">
			<%= form_for(@user) do |f| %>
			  <% if @user.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

			      <ul>
			      <% @user.errors.full_messages.each do |msg| %>
			        <li><%= msg %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>

			  <div class="field">
			    <%= f.label :nick_name, "昵称:#{@user.nick_name}" %><br />
			  </div>
			  <div class="field">
			    <%= label_tag :current_password, "当前密码" %><br />
			    <%= password_field_tag :current_password %>
			  </div>			  
			  <div class="field">
			    <%= f.label :password, "新密码" %><br />
			    <%= f.password_field :password %>
			  </div>
			  <div class="field">
			    <%= f.label :password_confirmation, "密码确认" %><br />
			    <%= f.password_field :password_confirmation %>
			  </div>

			  <div class="actions">
			    <%= f.submit "保存" %>
			  </div>
			<% end %>
          </div>               
        </div>

<%= link_to '取消', root_path %>
<script type="text/javascript">
  $(document).ready(function(){
    $('#user_profile_tab').tab('show');
  })
</script>

