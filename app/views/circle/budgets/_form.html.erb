      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.text_field :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.text_field :end_date %>
  </div>
  <div class="field">
    <%= f.label :visable_status %><br />
    <%= f.number_field :visable_status %>
  </div>
  <div class="field">
    <%= f.label :total_sum %><br />
    <%= f.text_field :total_sum %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 5, :cols => 20 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
