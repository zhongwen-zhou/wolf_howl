            <div class="row-fluid sortable">        
                <div class="box span12">
                    <div class="box-header well" data-original-title>
                        <h2><i class="icon-user"></i> 圈子列表</h2>
                        <div class="box-icon">
                            <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
                            <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                            <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <table class="table table-striped table-bordered bootstrap-datatable datatable">
                          <thead>
                              <tr>
                                  <th>圈子名</th>
                                  <th>圈子描述</th>
                                  <th>圈子等级</th>
                                  <th>成员数</th>
                                  <th>粉丝数</th>
                                  <th>圈子状态</th>
                                  <th>创建用户</th>
                              </tr>
                          </thead>   
                          <tbody>
                            <% @groups.each do |group| %>
                            <tr>
                                <td><%= group.name %></td>
                                <td><%= group.description %></td>
                                <td class="center"><%= group.level %></td>
                                <td class="center"><%= group.member_count %></td>
                                <td class="center"><%= group.following_count %></td>
                                <td class="center"><%= group.status %></td>
                                <td class="center"><%= group.user.nick_name %></td>
                            </tr>
                            <% end %>
                          </tbody>
                      </table>            
                    </div>
<%= link_to 'New Group', new_admin_group_path %>
                </div><!--/span-->
            
            </div><!--/row-->


