<%= form_for([:admin, @category]) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "类别名" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "类别描述" %><br />
    <%= f.text_area :description, :rows => 3 %>
  </div>
  <div class="field">
    <%= f.label "类别位置" %><br />
    <%= f.number_field :postion %>
  </div>
  <div class="field">
    <%= f.label "父类别" %><br />
    <%= select_tag('category[parent_id]', options_from_collection_for_select(@top_categories, "id", "name")) %>
  </div>
  <div class="actions">
    <%= f.submit "保存" %>
  </div>
<% end %>
